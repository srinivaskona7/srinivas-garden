{
  "name": "beautiful-garden",
  "version": "1.0.20",
  "description": "A beautiful garden and plant management application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:browser": "playwright test",
    "test:browser:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:browser",
    "start:docker": "docker build -t garden-local . && docker run -p 3000:3000 --rm garden-local",
    "build:docker": "docker build --platform linux/amd64 -t sriniv7654/garden:latest .",
    "push:docker": "docker push sriniv7654/garden:latest",
    "deploy:k8s": "helm upgrade --install beautiful-garden ./helm/beautiful-garden --namespace garden --create-namespace --kubeconfig kubeconfig-trail.yaml",
    "release": "./scripts/release.sh"
  },
  "keywords": [
    "garden",
    "plants",
    "management",
    "nodejs",
    "mongodb"
  ],
  "author": "Beautiful Garden Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "marked": "^4.3.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
